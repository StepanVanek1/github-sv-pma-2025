<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="10dp"
    tools:context=".activities.CreateQuestionActivity">

    <TextView
        android:id="@+id/twCreateQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_question"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/question" />

    <EditText
        android:id="@+id/etCorrectAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answer" />

    <RadioGroup
        android:id="@+id/rdGrpCreateQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdBtnChoiceQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/cyan"
            android:text="@string/answer_options" />

        <RadioButton
            android:id="@+id/rdBtnTextInputQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/cyan"
            android:text="@string/answer_textinput" />

    </RadioGroup>

    <Button
        android:id="@+id/btnCreateQuestion"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan"
        android:text="@string/create_question_button" />

</LinearLayout>